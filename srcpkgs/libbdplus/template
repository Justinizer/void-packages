# Template file for 'libbdplus'
pkgname=libbdplus
version=0.1.2
revision=1
build_style=gnu-configure
makedepends="libgcrypt-devel"
short_desc="This library is for playing BD+ blurays"
maintainer="Justin Jagieniak <justin@jagieniak.net>"
license="LGPL-2.1-or-later"
homepage="https://www.videolan.org/developers/libbdplus.html"
distfiles="ftp://ftp.videolan.org/pub/videolan/libbdplus/${version}/${pkgname}-${version}.tar.bz2"
checksum=a631cae3cd34bf054db040b64edbfc8430936e762eb433b1789358ac3d3dc80a

post_install() {
	rm -r $DESTDIR/usr/lib/pkgconfig
	vdoc $FILESDIR/README.voidlinux
}

libbdplus-devel_package() {
	depends="libbdplus>=${version}_${revision}"
	pkg_install() {
		vmove /usr/include
		vmove "/usr/lib/*.a"
		vmove "/usr/lib/*.so"
	}
}
